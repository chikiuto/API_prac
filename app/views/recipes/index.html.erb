<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<div class="search-box">
  <%= form_with url: recipes_index_path, method: :get, local: true do |form| %>
  <!--フォーム内容 -->
    <div class="form-group">
      <%= form.text_field :keyword, class: "form-control"%>
      <%= form.submit 'サラダのレシピを検索', class: "form-control btn btn-success"%>
    </div>
  <% end %>
</div>

<div>
  <% if @recipes.present? %>
    <%= render partial: 'result'%>
  <% end %>
</div>