<div class="form-heading">ログイン</div>
<div class="form users-form">
  <div class="form-body">
    <% if @error_message %>
      <div class="form-error">
        <%= @error_message %>
      </div>
    <% end %>
    <%= form_with(url: signin_path, local: true) do |f| %>
      <p>メールアドレス</p>
      <%= f.email_field :email ,placeholder: @email %>
      <p>パスワード</p>
      <%= f.password_field :password ,value: @password %>
      <%= f.submit 'SignIn', class: "form-control btn btn-success"%>
    <% end %>
  </div>
</div>