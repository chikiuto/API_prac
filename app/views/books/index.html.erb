<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<div class="search-box">
  <%= form_with url: books_index_path, method: :get, local: true do |form| %>
  <!--フォーム内容 -->
    <div class="form-group">
      <%= form.text_field :keyword, class: "form-control"%>
      <%= form.submit '本の題名を検索', class: "form-control btn btn-success"%>
    </div>
  <% end %>
</div>

<div>
  <% if @books.present? %>
    <%= render partial: 'result'%>
  <% end %>
</div>